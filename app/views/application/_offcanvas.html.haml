.off-canvas.position-left#offCanvas{'data-off-canvas': ''}
  %button.close-button{'aria-label' => "Close menu", 'data-close': ''}
    %span{'aria-hidden': true} &times;
  %ul.menu.vertical.off-canvas__menu
    %li= locale_link((current_locale == :en ? :pl : :en))
    %li= link_to t('nav.home'), root_path
    %li= link_to t('nav.jobs_pl'), jobs_poland_path
    %li= link_to t('nav.jobs_abroad'), jobs_abroad_path
    %li= link_to t('nav.companies'), companies_path
    - if company_signed_in?
      %li= link_to t('nav.add_offer'), new_offer_path
  %hr/
  %ul.menu.vertical.off-canvas__menu
    - if logged_in?
      %li= link_to t('nav.dashboard'), dashboard_path
      %li= link_to t('nav.profile'), profile_path
      %li= link_to t('nav.sign_out'), destroy_user_session_path, method: :delete 
    - else
      %li= link_to t('nav.sign_in'), new_user_session_path
      %li= link_to t('nav.sign_up'), sign_up_path



