%td
  %span.education_item__date= l education_item.start_date, format: :by
  &ndash;
  - if education_item.end_date.present?
    %span.education_item__date= l education_item.end_date, format: :by
  - else
    present
%td
  %span.education_item__category= t("education_items.categories.#{education_item.category}") + ","
  %span.education_item__specialization= education_item.specialization+","
  %span.education_item__organization_name= education_item.organization.local_name

