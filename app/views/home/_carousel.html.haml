.owl-carousel.owl-theme#banner-carousel
  .owl-slide.owl-slide--blonde
    .row.owl-slide__container--left
      .owl-slide__text
        %span.home__row1__long-text= t('.slide1.long_text')
        %span.home__row1__upper-text= t('.slide1.upper_text') 
        %span.home__row1__lower-text!= t('.slide1.lower_text') 
        = link_to t('.slide1.jobs_poland'), jobs_poland_path, class: 'button large'
        = link_to t('.slide1.jobs_abroad'), jobs_abroad_path, class: 'button large dark-green-bg'
  .owl-slide.owl-slide--black-woman
    .owl-slide__container--left
      .owl-slide__text
        %span.home__row1__long-text= t('.slide2.long_text')
        %span.home__row1__upper-text= t('.slide2.upper_text') 
        %span.home__row1__lower-text= raw t('.slide2.lower_text') 
        = link_to t('.slide2.sign_up'), new_company_registration_path, class: 'button large'
  .owl-slide.owl-slide--smiling-dude
    .owl-slide__container--left
      .owl-slide__text
        -#%span.home__row1__long-text= t('.slide3.long_text')
        %span.home__row1__upper-text= t('.slide3.upper_text')
        %span.home__row1__lower-text!= t('.slide3.lower_text')
        = link_to t('.slide3.subscribe'), new_newsletter_subscription_path, class: 'button large'
  .owl-slide.owl-slide--bus
    .owl-slide__container--left
      .owl-slide__text
        %span.home__row1__long-text= t('.slide4.long_text')
        %span.home__row1__upper-text= t('.slide4.upper_text')
        %span.home__row1__lower-text!= t('.slide4.lower_text')
        = link_to t('.slide4.link'), "https://buszagranica.pl/", class: 'button large', target: "_blank"


:javascript
  $('#banner-carousel').owlCarousel({
    items: 1,
    dots: true,
    slideSpeed: 1000,
    autoplay: true,
    loop: true,
    autoplayTimeout: 10000
  });
