.owl-carousel.owl-theme
  .owl-slide.owl-slide--couple
    .row.owl-slide__container
      .owl-slide__text
        %p.home__row1__upper-text= t('.slide1.upper_text') 
        %p.home__row1__lower-text= raw t('.slide1.lower_text') 
        = link_to t('nav.sign_up'), sign_up_path, class: 'home__row1__cta'
  .owl-slide.owl-slide--warsaw
    .row.owl-slide__container
      .owl-slide__text
        %p.home__row1__upper-text= t('.slide1.upper_text') 
        %p.home__row1__lower-text= raw t('.slide1.lower_text') 
        = link_to t('nav.sign_up'), sign_up_path, class: 'home__row1__cta'

:javascript
  $('.owl-carousel').owlCarousel({
    items: 1,
    dots: true,
    slideSpeed: 1000,
    autoplay: true,
    loop: true,
    autoplayTimeout: 7000
  });
