.top-bar
  .row
    .top-bar-left
      %ul.menu
        %li= link_to t('site_name'), root_path
        - if company_signed_in?
          %li= link_to t('topbar.jobs'), offers_path
          %li= link_to t('topbar.candidates'), candidates_path
        -else
          %li= link_to t('topbar.jobs_pl'), offers_path
          %li= link_to t('topbar.jobs_abroad'), offers_path
    .top-bar-right
      %ul.menu
        - if current_locale == :pl
          %li= link_to "EN", lang: "en"
        -else
          %li= link_to "PL", lang: "pl"
        - if signed_in?
          -if admin?
            %li= link_to "Dashboard", "#"
          - else
            %li= link_to "Profile", profile_path
          %li= link_to "Sign out", destroy_user_session_path, method: :delete 
        - else
          %li= link_to t('topbar.sign_in'), new_user_session_path
          %li= link_to t('topbar.sign_up'), sign_up_path


