!!!
%html{:lang => "en"}
  = render 'header'
  %body
    = render 'offcanvas'
    .off-canvas-content{'data-off-canvas-content': ''}
      = render 'topbar' # topbar, visible for medium and above
      = render 'titlebar' # visible for small screens
      .container
        .row.relative
          %button{type: 'button', 'data-open': 'offCanvas'}
          = render 'messages'
          = yield
        .row
          %hr/
          InJobs
          - if Rails.env.development? && false
            %small= debug flash
            %small= debug params
      
