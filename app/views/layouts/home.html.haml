%html{:lang => I18n.locale}
  = render 'header'
  = stylesheet_link_tag 'owl.carousel'
  = stylesheet_link_tag 'owl.theme.css'
  %body.home{'data-turbolinks' => 'false'}
    = render 'facebook_like_box'
    = render 'offcanvas'
    .off-canvas-content{'data-off-canvas-content': ''}
      = render 'topbar'
      = render 'titlebar'
      .container
        .row
          = render 'messages'
      = yield
      = render 'cookie_and_rodo'
      = render 'footer'
    = render 'ga'
