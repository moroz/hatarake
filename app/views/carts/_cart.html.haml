- if defined?(view_format) && view_format == :order
  .order
    - if cart.cart_items.present?
      %table
        %tbody
          - cart.cart_items.each do |item|
            %tr
              %td!= item.quantity.to_s + " &times;".html_safe
              %td= item.product.local_name
              - if defined?(currency)
                %td.text-right
                  &agrave;
                  = sprintf("%.2f %s", item.unit_price(currency), currency.upcase)
                %td
                  \=
                  = sprintf("%.2f %s", item.subtotal(currency), currency.upcase)
              - else
                %td= item.subtotal_to_s
        %tfoot
          %tr
            %td.text-right{colspan: 3}
              = t('.total')
            %td
              - if defined?(currency)
                = sprintf("%.2f %s", cart.total(currency), currency.upcase)
              - else
                = cart.total_to_s

- else
  .cart__table#cart
    %table.hover
      %thead
        %tr
          - unless cart.readonly?
            %td.cart_item__actions
          %td.cart_item__product_name= t('.product_name')
          %td.cart_item__unit_price= t('.unit_price')
          %td.cart_item__quantity= t('.quantity')
          %td.cart_item__subtotal= t('.subtotal')
          
      %tbody
        = render cart.cart_items
      %tfoot
        %tr
          -# Emoji é¬¼ ogra U+1f479
