= link_to "Back to list", offers_path
%h2= t('.heading') + offer.title

= render 'actions'
.row
  .medium-6.columns
    = render 'details'
  .medium-6.columns
    - if candidate_signed_in?
      - if offer.candidate_applied?(current_candidate)
        = render 'already_applied'
      - else
        = render 'application_form'
    - elsif can? :manage, offer
      = render 'applicant_count'
    - elsif !signed_in?
      = render 'sign_in_to_apply'
- if signed_in?
  = link_to t('offers.save_offer'), "#"

%h3 Description
.offer__description
  = markdown offer.description

= render 'actions'
