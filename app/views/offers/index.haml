%h1 Job offers

= render 'advanced_search'
= paginate offers

- if offers.any?
  %table.unstriped.hover
    %thead
      %td= t('offers.table.title')
      %td= t('offers.table.company')
      %td= t('offers.table.salary')
      %td= t('offers.table.location')
      %tbody
        - for offer in offers
          = render partial: 'offers/offer_row', locals: { offer: offer }
- else
  = t('.no_offers')

= paginate offers
- if can? :create, Offer
  = link_to t('offers.add_new_offer'), new_offer_path, class: 'button'
