- if @total_count > 0
  .row
    .offers__search_description
      = @search_description
      = t('offers.index.offer_count', count: @total_count)
      = reset_search_link if @search_description.present?
  .offer-list#offers
    - if @featured.present?
      .category_featured
        %h4 Promowane oferty
        - @featured.each do |f|
          = render 'offer', offer: f
    - if @offers.any?
      = render @offers
    - else
      = t('offers.index.no_offers')
  = paginate @offers
- else
  = render 'no_offers_found'
