- set_meta_tags title: t('.heading').titleize,
                description: t('.meta_description')
- breadcrumb :jobs_poland
- content_for :banner do
  .banner.banner--taller.banner--warsaw
    %h2.text-center= t('.heading')

    .row
      = render 'poland_search'

.row
  .offers__popular_locations.text-center
    %h4= t('offers.popular_voivodeships')
    - @popular_locations.each do |location|
      = render 'popular_location', location: location, link_param: :pid
  #offer-list 
    = render 'offers'
