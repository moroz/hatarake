%div{id: dom_id(offer), class: 'offer offer__row'}
  .row
    .medium-9.columns
      %strong= (link_to offer.title, offer)
      %br
      %small
        %span.offer__location= offer.location.short_format + ","
        %span= short_salary(offer)
      %br/
    .medium-3.columns.offer__actions.text-right
      = link_to offer.company.name, offer.company
      - if signed_in?
        %br/
        = link_to fa_icon('star-o'), '#', title: t('offers.save_offer')
