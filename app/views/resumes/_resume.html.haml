%li.resume{id: dom_id(resume)}
  = t("languages.#{resume.language}")
  - if resume.pdf?
    = link_to "PDF", resume.file_url, target: '_blank'
  - else
    = link_to resume.file.file.extension.upcase, resume.file_url, target: '_blank'
    &bull;
    = link_to 'PDF', resume.file.pdf.url, target: '_blank'
  - if can? :destroy, resume
    = link_to "Delete", resume, method: :delete
