%h2= @heading || "Sign up"
= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
  = devise_error_messages!
  = f.input :email
  = f.input :password
  = f.input :password_confirmation
  .row
    %fieldset.medium-12.columns
      %legend Preferred language
      = f.input :locale, as: :radio_buttons, collection: [['polski', 'pl'], ['English', 'en']], label: false
  = f.submit "Create account", class: 'button primary expanded'
