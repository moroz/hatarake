.card
  .card-divider
    %h4= t('candidates.show.skills')
  .card-section
    %div
      - if candidate.skill_items.any?
        %table
          %tbody#skill_items
            = render candidate.skill_items
      - else
        = t('candidates.show.no_skills')
    - if can? :edit, candidate
      = link_to t('candidates.show.edit_skills'), candidate_edit_skills_path, class: 'button small'

