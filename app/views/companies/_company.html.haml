= link_to company do
  %div{id: dom_id(company), class: 'company company-row'}
    .company-row__left
      = square_logo_for company, size: 'thumb'
    .company-row__center
      %span.company-row__name= company.name
      %br/
      %small
        = t('plurals.offer', count: @offer_counts[company.id])
        |
        = fa_icon('star-o', text: company.avg_rating)
