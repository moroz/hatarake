@import 'settings';
@import 'colors';
html {
  font-size: 100%;
}

body {
  font-size: 110%;
  background-color: #f6f6f6;
}

select {
  -webkit-appearance: none;
  -moz-appearance: none;
  -ms-appearance: none;
}

.notice {
  background-color: $notice-color;
}

.avatar {
  width: 80%;
  height: 0;
  padding-bottom: 80%;
  overflow: hidden;
  background-position: center;
  background-size: cover;
  img {
    min-width: 100%;
    min-height: 100%;
  }
  vertical-align: middle;
  margin: 0 auto;
}

.avatar--large {
  max-width: 300px;
  max-height: 300px;
  width: 100%;
  padding-bottom: 100%;
}
.custom_button {
  border: 3px solid $button-color;
  vertical-align: middle;
  border-radius: 0.3rem;
  padding: 0.4rem;
  color: $button-color;
  background-color: #fff;
  font-size: 1.2rem;
  font-family: $alternative-font;

  &:visited {
    color: $button-color;
  }

  &:hover, &:focus {
    background-color: $button-color;
    color: #fff;
    transition: 0.3s background-color ease, 0.3s color ease;
    text-decoration: none;
  }
}

.custom_button--expanded {
  width: 100%;
  display: block;
}

.custom_button--small {
  font-weight: 400;
  border-width: 2px;
  font-size: 0.9rem;
}

<% %w( primary secondary success notice alert warning ).each do |color| %>
  .custom_button--<%= color %> {
    color: $<%= color %>-color;
    border-color: $<%= color %>-color;

    &:visited {
      color: $<%= color %>-color;
    }
  
    &:hover, &:focus {
      background-color: lighten($<%= color %>-color, 10%);
      color: #fff;
    }
  }
<% end %>

a, th {
  font-weight: 400;
}

a:hover {
  text-decoration: underline;
}

table a {
  font-weight: 400;
}

.top-bar {
  a, a:visited {
    color: #333;
    font-weight: 400;
    border-bottom: 2px solid transparent;
  }
  a:hover {
    color: #555;
    border-color: #555;
    text-decoration: none;
  }
}

.basic_search {
  margin-bottom: 1.5rem;
}

.title-bar {
 // border-bottom: 1px solid $custom-secondary;
}

.title-bar__sitename {
  font-family: $alternative-font;
}

h1, h2, h3, h4, h5, h6 {
  font-family: $alternative-font;
}

textarea.text {
  font-family: monospace;
  font-size: 1.2rem;
}

th[scope='row'] {
  text-align: left;
  width: 10rem;
}

.white-bg {
  background-color: #fff;
}

.locale_flag {
  height: 1rem;
  width: auto;
  border: 1px solid #eee;
}

.off-canvas .locale_flag {
  height: 1.5rem;
}
