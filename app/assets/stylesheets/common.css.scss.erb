@import 'colors';
html {
  font-size: 100%;
}

body {
  font-size: 110%;
  background-color: #fafafa;
}

select {
  -webkit-appearance: none;
  -moz-appearance: none;
  -ms-appearance: none;
}

.notice {
  background-color: $notice-color;
}

.avatar {
  width: 50%;
  height: 0;
  padding-bottom: 50%;
  border: 1px solid #ccc;
  background-color: #aaa;
  background-position: center;
  background-size: cover;
}

.avatar--large {
  max-width: 300px;
  max-height: 300px;
  width: 100%;
  padding-bottom: 100%;
}

.profile-section--border {
  border: 1px solid #bbb;
}

.profile-section--padding {
  padding: 0;
}

.profile-section--margin {
  margin: 1rem;
}

.profile-section__heading {
  width: 100%;
  background-color: #ccc;
  font-size: 1.4rem;
  padding: 0.5rem 0.5rem 0.5rem 1.5rem;
}

.profile-section__content {
  padding: 0.8rem;
}

<% %w( red blue green maroon ).each do |color| %>
  <% bg = "$profile-section-#{color}-bg" %>
  .profile-section--color-<%= color %> {
    .profile-section__heading {
      background-color: <%= bg %>;
      color: white;
    }
    border-color: <%= bg %>;
    a.button {
      background-color: <%= bg %>;
      &:hover {
        background-color: lighten(<%= bg %>, 14);
        transition: background-color 0.3s fade;
      }
    }
  }
<% end %>

.skill__name {
  font-weight: bold;
}

.skill__level {
  text-align: right;
}

.custom_button {
  border: 3px solid $button-color;
  border-radius: 0.3rem;
  padding: 0.4rem;
  color: $button-color;
  background-color: #fff;
  font-size: 1.2rem;
  font-family: $alternative-font;

  &:hover {
    background-color: $button-color;
    transition: 0.3s background-color ease, 0.3s color ease;
    text-decoration: none;
    color: #fff;
  }

  &:visited {
    color: $button-color;
  }
}

.custom_button--expanded {
  width: 100%;
  display: block;
}

.custom_button--small {
  font-weight: 400;
  border-width: 2px;
  font-size: 0.9rem;
}

.custom_button--tertiary {
  border-color: $custom-tertiary;
  color: $custom-tertiary;

  &:hover {
    background-color: lighten($custom-tertiary, 10%);
  }
}

.top-bar {
  font-family: $alternative-font;
  a, a:visited {
    color: #333;
    border-bottom: 2px solid transparent;
  }
  a:hover {
    color: darken(#333, 14%);
    border-bottom: 2px solid $custom-secondary;
    text-decoration: none;
  }
}

.basic_search {
  margin-bottom: 1.5rem;
}

.title-bar {
  border-bottom: 1px solid $custom-secondary;
}

.title-bar__sitename {
  font-family: $alternative-font;
}

h1, h2, h3, h4, h5, h6 {
  font-family: $alternative-font;
}

textarea.text {
  font-family: monospace;
  font-size: 1.2rem;
}

th[scope='row'] {
  text-align: left;
  width: 10rem;
}

.offer__preview {
  padding: 0.5rem;
  min-height: 40vh;
  border: 1px dashed #333;
  margin-bottom: 1.5rem;
}

.offer__preview-contents {
  height: auto;
  display: table-row;
  &:empty {
    background-color: #ccc;
  }
}

.offers {
  overflow-x: auto;
}

.textile_info {
  padding: 0.8rem;
  margin: 0.5rem;
  font-size: 86%;
  background-color: lighten(SeaGreen, 39);
  border: 1px dashed #666;
}

a, th, ul.menu a {
  font-weight: 400;
}

a:hover {
  text-decoration: underline;
}

.white-bg {
  background-color: #fff;
}
